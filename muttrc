# vim to edit emails
set editor = "vim"

# Basic config
set timeout         = 60
set mail_check      = 120
set imap_keepalive  = 300
unset imap_passive
set sort            = threads
set sort_aux        = last-date-received
set imap_check_subscribed
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set move = no
set include
set auto_tag = yes
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

# text html
auto_view text/html

# solarized theme
source ~/dotfiles_reloaded/solarized/mutt-colors-solarized/mutt-colors-solarized-dark-256.muttrc

# set sidebar_width=12
# set sidebar_visible=yes
# set sidebar_delim='|'
# set sidebar_sort=yes

# Account Hooks
account-hook . "unset imap_user; unset tunnel" # unset first!
account-hook        "imaps://kevindurb@imap.gmail.com/" "\
    set imap_user   = kevindurb@gmail.com"
account-hook        "imaps://vbman11@imap.gmail.com/" "\
    set imap_user   = vbman11@gmail.com"

# Setup for Primary Account:
set folder          = imaps://kevindurb@imap.gmail.com/
mailboxes           = +INBOX =[Gmail]/Drafts =[Gmail]/'Sent Mail' =[Gmail]/Spam =[Gmail]/Trash
set spoolfile       = +INBOX
folder-hook         imaps://kevindurb@imap.gmail.com/ "\
    set folder      = imaps://kevindurb@imap.gmail.com/ \
        spoolfile   = +INBOX \
        postponed   = +[Gmail]/Drafts \
        record      = +[Gmail]/'Sent Mail' \
        from        = 'Kevin Durbin <kevindurb@gmail.com> ' \
        realname    = 'Kevin Durbin' \
        smtp_url    = smtps://kevindurb@smtp.gmail.com"

# Setup for Secondary Account:
set folder          = imaps://vbman11@imap.gmail.com/
mailboxes           = +INBOX =[Gmail]/Drafts =[Gmail]/'Sent Mail' =[Gmail]/Spam =[Gmail]/Trash
set spoolfile       = +INBOX
folder-hook         imaps://vbman11@imap.gmail.com/ "\
    set folder      = imaps://vbman11@imap.gmail.com/ \
        spoolfile   = +INBOX \
        postponed   = +[Gmail]/Drafts \
        record      = +[Gmail]/'Sent Mail' \
        from        = 'Kevin Durbin <vbman11@gmail.com> ' \
        realname    = 'Kevin Durbin' \
        smtp_url    = smtps://vbman11@smtp.gmail.com"

# key bindings
macro index <F1> "y12<return><return>" "primary Account"
macro index <F2> "y6<return><return>"  "secondary Account"
macro index d ";s+[Gmail]/Trash<enter><enter>" "Move to Gmail's Trash"
macro pager d "s+[Gmail]/Trash<enter><enter>"  "Move to Gmail's Trash"
macro index u ";s+INBOX<enter><enter>"         "Move to Gmail's INBOX"
macro pager u "s+INBOX<enter><enter>"          "Move to Gmail's INBOX"
