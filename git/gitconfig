[core]
  editor = code -w
	excludesfile = /Users/kdurbin/.gitignore
[user]
	name = Kevin Durbin
	email = kevindurb@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = red
  untracked = cyan
[alias]
  aa = add --all
  s = status
  ci = commit
  co = checkout
  mk = checkout -b
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  diff = diff -w
  cp = cherry-pick
  start = "!git checkout -b case/se-$1 #"
  pushnew = "!git push --set-upstream origin `git rev-parse --abbrev-ref HEAD` #"
  case = "!git checkout case/se-$1 #"
  commitcase= "!BRANCH=`git rev-parse --abbrev-ref HEAD | sed \"s/case\\/se\\-//\" `; git commit -m \"[#$BRANCH] $1\" #"
[push]
	default = current
[rerere]
  enabled = 1
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[commit]
  template = /Users/kdurbin/.stCommitMsg
