[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=1,5 -R
[user]
  name = Kevin Durbin
  email = kevindurb@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = red
  untracked = cyan
[alias]
  aa = add --all
  s = status
  ci = commit
  co = checkout
  mk = checkout -b
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  diff = diff -w
  cp = cherry-pick
[diff]
  tool = vimdiff
[push]
  default = tracking
[rerere]
  enabled = 1
[mergetool]
  keepBackup = true
  prompt = false
[difftool]
  prompt = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
