# vi: ft=zsh

ZSH=$HOME/dotfiles/zsh

export ZPLUG_HOME=$ZSH/zplug
source $ZPLUG_HOME/init.zsh

# prezto plugins
zplug "modules/completion", from:prezto
zplug "modules/history", from:prezto

# theme
zplug "mafredri/zsh-async", on:sindresorhus/pure
zplug "sindresorhus/pure", use:pure.zsh

# other
zplug "zsh-users/zsh-history-substring-search", defer:3
zplug "zsh-users/zsh-syntax-highlighting", defer:3

# check to see if everything is loaded
# and install if not
if ! zplug check; then
  zplug install
fi
zplug load

# colorized ls
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
# set my editor
export EDITOR='vim'
# use local php at work for faster test running
export USE_LOCAL_PHP=1

# other aliases to make stuff faster
alias lss="ls -lAF"
alias c="clear"
alias t="todo.sh"

# history search
autoload -U history-search-end
zle -N history-beginning-search-backward-end history-search-end
bindkey "^[[A" history-beginning-search-backward-end

# load nvm
[ -f $HOME/.nvm/nvm.sh ] && source $HOME/.nvm/nvm.sh

# autojump
if hash brew 2>/dev/null; then
  [[ -s $(brew --prefix)/etc/profile.d/autojump.sh ]] && . $(brew --prefix)/etc/profile.d/autojump.sh
fi
