# vi: ft=zsh

ZSH=$HOME/dotfiles/zsh

export ZPLUG_HOME=/usr/local/opt/zplug
source $ZPLUG_HOME/init.zsh

# prezto plugins
zplug "modules/autosuggestions", from:prezto
zplug "modules/completion", from:prezto
zplug "modules/homebrew", from:prezto
zplug "modules/history", from:prezto
zplug "modules/git", from:prezto
zplug "modules/osx", from:prezto

# theme
zplug "mafredri/zsh-async", on:sindresorhus/pure
zplug "sindresorhus/pure", use:pure.zsh

# other
zplug "zsh-users/zsh-syntax-highlighting", nice:10

if ! zplug check; then
  zplug install
fi
zplug load

# colorized ls
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
# set my editor
export EDITOR='vim'
# use local php at work for faster test running
export USE_LOCAL_PHP=1

# other aliases to make stuff faster
alias lss="ls -lAF"
alias lsd="ls -lAFd */"
alias rmvimswp="rm -rf ~/.vim/backup/*"
alias c="clear"

# jump to a project from anywhere
go () { cd ~/projects/$1; }
_go () { _files -W ~/projects -/; }
compdef _go go

# load nvm
[ -f $HOME/.nvm/nvm.sh ] && source $HOME/.nvm/nvm.sh
